@{
    ViewData["Title"] = "Add ingredients";
}
<div class="text-center">
    <h2 class="display-4">Add ingredients</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Kitchen:</div>
            <div class="col-8">
                <select id="kitchenId" name="kitchenId" class="form-control" asp-items="@(new SelectList(@ViewBag.Kitchen,"Id", "KitchenName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Ingredient:</div>
            <div class="col-8">
                <select id="ingredientId" name="ingredientId" class="form-control" asp-items="@(new SelectList(@ViewBag.Ingredient,"Id", "IngredientName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Count:</div>
            <div class="col-8"><input type="text" name="count" id="count" /></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Add
            </button>
        </div>
    </div>
</form> 